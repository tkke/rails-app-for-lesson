

<div class="col-xs-8" id="users-content">
	<div class="user-info">
		<% if notice %>
			<!-- ここでflashを表示してます -->
			<div class="alert alert-info"><%=notice%></div>
		<% end %>
		<span class="user-name">
			<!--## ユーザーのemailを表示 -->
			<%= @user.email %>
		</span>
	</div>
	<ul class="nav nav-tabs nav-justified">
		<li {class: action_name == "show" ? "active" : nil}>
			<%= link_to user_path(@user) do %>
				<div class="text">
					つぶやき
				</div>
				<div class="num">
					<!--## ユーザーのツイートを数えて表示 -->
					<%= Tweet.where(user_id: @user.id).count %>
				</div>
			<% end %>
		</li>

		<li {class: action_name == "favorites" ? "active" : nil}>
		<%= link_to favorites_user_path(@user) do %>
			<div class="text">
				お気に入り
			</div>
			<div class="num">
				<!-- ユーザーのお気に入りを数えて表示 -->
				<%= @user.favorites.count %>
			</div>
		<% end %>
		</li>
	</ul>
	<div class="list-group">
		<!-- ユーザーに紐付いたツイートを取得し、eachメソッドでツイート分表示 -->
    <% if @user.favorites.empty? %>
    <div class="list-group-item">
      <div class="tweet-content">
        <p>
          まだお気に入りを登録した投稿はありません。
        </p>
      </div>
    </div>
    <%end%>
		<% @user.favorites.map { |f| f.tweet }.each do |tweet| %>
			<div class="list-group-item">
				<h4 class="user">
					<span class="user-name">
						<!--## link_toを使用しユーザーページへのリンクを作る（表示するテキストはemails） -->
					  <%= link_to tweet.user.email, user_path(tweet.user) %>
					</span>
					<span class="time pull-right">
						<%= distance_of_time_in_words_to_now(tweet.created_at) %>
					</span>
					<div class="clear"></div>
				</h4>
				<div class="tweet-content">
					<p>
						<!--## ツイートのcontentを表示 -->
						<%= tweet.body %>
					</p>
				</div>
			</div>
		<%end%>
		<!-- each終わり -->
	</div>
</div>
